{
	"name": "Swift",
	"version": "0.0.1",
	"publisher": "owensd.io",
	"description": "LLDB debugger support for Visual Studio Code",
	"author": {
		"name": "David Owens II - owensd.io"
	},
	"icon": "images/DragonSmall.png",
	"categories": [
		"Debuggers"
	],
	"galleryBanner": {
		"color": "#E7E7E7",
		"theme": "light"
	},
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/owensd/vscode-lldb.git"
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
		"start": "node ./node_modules/vscode/bin/compile; VSCODE_CWD=\"$PWD\" open -n -b \"com.microsoft.VSCode\" --args --extensionDevelopmentPath=.; node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"extensionDependencies": [
		"vscode.lldb"
	],
	"dependencies": {
		"console-stamp": "^0.2.0"
	},
	"devDependencies": {
		"vscode": "0.10.x",
		"fs-extra": "^0.26.0",
		"typescript": "^1.6.2"
	},
	"engines": {
		"vscode": "0.10.x"
	},
	"contributes": {
		"debuggers": [
			{
				"type": "lldb",
				"label": "LLDB",
				"enableBreakpointsFor": {
					"languageIds": [ "swift", "cpp", "objc" ]
				},
				"program": "./out/lldb/main.js",
				"runtime": "node",
				"initialConfigurations": [
					{
						"name": "Launch main.swift",
						"type": "swift",
						"request": "launch",
						"mode": "debug",
						"program": "main.swift"
					}
				],
				"configurationAttributes": {
					"launch": {
						"required": ["program"],
						"properties": {
							"program": {
								"type": "string",
								"description": "Workspace relative path to the program folder",
								"default": "main.swift"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop program after launch.",
								"default": true
							}
						}
					}
				}
			}
		]
	}
}
