{
	"name": "Swift",
	"version": "0.1.0",
	"publisher": "owensd.io",
	"description": "LLDB debugger support for Visual Studio Code",
	"author": {
		"name": "David Owens II"
	},
	"icon": "images/DragonSmall.png",
	"categories": [
		"Debuggers"
	],
	"galleryBanner": {
		"color": "#E7E7E7",
		"theme": "light"
	},
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/owensd/vscode-lldb.git"
	},
	"bugs": {
		"url": "https://github.com/owensd/vscode-lldb/issues"
	},
	"scripts": {
		"compile": "tsc -p ./lib",
		"watch": "tsc -w -p ./lib/",
		"test": "mocha out/tests"
	},
	"dependencies": {
		"vscode-debugadapter": "^1.0.1",
		"vscode-debugprotocol": "^1.0.1"
	},
	"devDependencies": {
		"typescript": "^1.6.2",
		"mocha": "*"
	},
	"engines": {
		"vscode": "^0.10.x"
	},
	"contributes": {
		"debuggers": [
			{
				"type": "lldb",
				"label": "LLDB",
				"enableBreakpointsFor": {
					"languageIds": [ "swift", "cpp", "objc" ]
				},
				"program": "./out/src/lldb-debugger.js",
				"runtime": "node",
				"initialConfigurations": [
					{
						"name": "Launch main.swift",
						"type": "swift",
						"request": "launch",
						"program": "main.swift",
						"stopOnEntry": true
					}
				],
				"configurationAttributes": {
					"launch": {
						"required": ["program"],
						"properties": {
							"program": {
								"type": "string",
								"description": "Workspace relative path to the program folder",
								"default": "main.swift"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop program after launch.",
								"default": true
							}
						}
					}
				}
			}
		]
	}
}
